from random import choice
 
continuer = 'o'
 
while continuer in ('o', 'O'):
    choix_cote = input("Pile ou face ? ")
    cote = choice(('pile', 'face')) #choisi l'un des deux au hasard
    if choix_cote == cote:
        print("Gagné !")
    else:
        print("Perdu !")
    continuer = input("Voulez vous rejouer ?")
    

#Output :
Pile ou face ? pile
Gagné !
Voulez vous rejouer ?o
Pile ou face ? pile
Perdu !
Voulez vous rejouer ?o
